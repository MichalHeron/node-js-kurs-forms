<h1>Lista firm:</h1>

<form method="GET">
  <%- include('partials/search') %>

    <div class="row">
      <div class="col-3">

        <label for="sort" class="form-label">Sortuj wg</label>
        <select name="sort" id="sort" class="form-control">
          <option value="">Domyślnie</option>
          <option value="name|asc" <%- query.sort==='name|asc' ? 'selected' : '' %> >A-z</option>
          <option value="name|desc" <%- query.sort==='name|desc' ? 'selected' : '' %> >Z-a</option>
          <option value="employeesCount|asc" <%- query.sort==='employeesCount|asc' ? 'selected' : '' %> >Ilość
            pracowników
            (rosnąco)</option>
          <option value="employeesCount|desc" <%- query.sort==='employeesCount|desc' ? 'selected' : '' %> >Ilość
            pracowników
            (malejąco)</option>
        </select>
        <button class="btn btn-primary mt-3">Zastosuj</button>
</form>

</div>
<div class="col-9">
  <% companies.forEach(company=> { %>
    <div class="card bg-light mb-3">
      <div class="card-body">
        <p class="h3 mb-4">
          <%= company.name %>
        </p>
        <a href="/firmy/<%= company.slug %>" class="btn btn-primary">Zobacz</a>
        <a href="admin/firmy/<%= company.slug %>/edytuj" class="btn btn-warning">Edytuj</a>
        <a href="admin/firmy/<%= company.slug %>/usun" onclick="return confirm('Czy jesteś pewny?')"
          class="btn btn-danger">Usuń</a>
      </div>
    </div>
    <% }); %>
</div>
</div>